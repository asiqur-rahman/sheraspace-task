
<html>
<head>
    <meta charset="utf-8">
    <title>CV Lists</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Left Panel -->

    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/"> <i class="menu-icon fa fa-bar-chart"></i>Dashboard </a>
                    </li>
                    <li>
                        <a href="/form"> <i class="menu-icon fa fa-wpforms"></i>Form </a>
                    </li>
                    <li>
                        <a href="/cvlist"> <i class="menu-icon fa fa-th"></i>CV List </a>
                    </li>
                </ul>
            </div>
        </nav>
    </aside>

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

      <!-- Header-->
      <header id="header" class="header">
          <div class="top-left">
              <div class="navbar-header">
                  <a class="navbar-brand" href="./"><img src="/images/logo.png" alt="Logo"></a>
                  <a class="navbar-brand hidden" href="./"><img src="/images/logo2.png" alt="Logo"></a>
                  <a id="menuToggle" class="menutoggle"><i class="fa fa-bars"></i></a>
              </div>
          </div>
      </header>
      <!-- Header-->

        <div class="content">
            <div class="animated fadeIn">
                <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">CV List</strong>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">SL</th>
                                    <th colspan="3" scope="col">Name</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% for(var i=0; i < data.length; i++) { %>
                                <tr>
                                  <td scope="row"><%= i+1 %></td>
                                  <td colspan="3"><%= data[i].name %></td>
                                  <td scope="col">
                                    <a href="/cvlist/details?id=<%= data[i].id%>" class=" btn-primary btn-sm active">See Details</a>
                                    <a href="/cvlist/update?id=<%= data[i].id%>" class=" btn-primary btn-sm active">Update</a>
                                    <a href="/cvlist/delete?id=<%= data[i].id%>" class=" btn-danger btn-sm active">Delete</a>
                                  </td>
                               </tr>
                              <% } %>

                            </tbody>
                        </table>
                        <center style="color:green"><h4><%=msg %></h4></center>
                    </div>

                </div>
            </div>
        </div>
        <marquee direction="right">This Application Developed by <b>NODE JS</b> Framework</marquee>
    </div><!-- .animated -->
</div><!-- .content -->


</div><!-- /#right-panel -->

<!-- Right Panel -->

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
<script src="/js/main.js"></script>


</body>
</html>
