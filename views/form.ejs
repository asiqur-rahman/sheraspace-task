
<!doctype html>
<head>
    <meta charset="utf-8">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Left Panel -->

    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/"> <i class="menu-icon fa fa-bar-chart"></i>Dashboard </a>
                    </li>
                    <li>
                        <a href="/form"> <i class="menu-icon fa fa-wpforms"></i>Form </a>
                    </li>
                    <li>
                        <a href="/cvlist"> <i class="menu-icon fa fa-th"></i>CV List </a>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
    </aside><!-- /#left-panel -->

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

      <!-- Header-->
      <header id="header" class="header">
          <div class="top-left">
              <div class="navbar-header">
                  <a class="navbar-brand" href="./"><img src="images/logo.png" alt="Logo"></a>
                  <a class="navbar-brand hidden" href="./"><img src="images/logo2.png" alt="Logo"></a>
                  <a id="menuToggle" class="menutoggle"><i class="fa fa-bars"></i></a>
              </div>
          </div>
      </header>
      <!-- Header-->

        <div class="content">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                Create <strong>CV</strong>
                            </div>
                            <div class="card-body card-block">
                                <form action="" method="post" class="form-horizontal">

                                    <div class="row form-group">
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Name</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" id="name" name="name"  pattern="[A-Z a-z]{1,30}" placeholder="Ex. Asiqur Rahman Khan" class="form-control" required>
                                          <!-- <small class="form-text text-muted">Your Full Name</small> -->
                                        </div>
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Father Name</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" id="fname" name="fname" pattern="[A-Z a-z]{1,30}" placeholder="Ex. Fazlur Rahman Khan" class="form-control" required>
                                          <!-- <small class="form-text text-muted">Your Father Name</small> -->
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Date of Birth</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="date" id="dob" name="dob" placeholder="Ex. 2020-12-30" class="form-control" required>
                                          <!-- <small class="form-text text-muted">Birthday date same as Certificate</small> -->
                                        </div>
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Gender</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                        <select name="gender" id="gender" class="form-control">
                                            <!-- <option value="0">Please select</option> -->
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>
                                        </select>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Phone</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" id="phone" name="phone" pattern="[01][0-9]{10}" placeholder="Ex. 01799089893" class="form-control" required>
                                          <!-- <small class="form-text text-muted">Your Phone Number</small> -->
                                        </div>
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Email</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="email" id="email" name="email" placeholder="Ex. email@gmail.com" class="form-control" required>
                                          <!-- <small class="form-text text-muted">Your Email</small> -->
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-2">
                                          <label for="select" class=" form-control-label">District</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                            <select name="district" id="district" class="form-control">

                                                <% for(var i=0; i < data.length; i++) { %>
                                                    <option value="<%= data[i].name %>"><%= data[i].name %></option>
                                                <% } %>
                                            </select>
                                            <!-- <small class="form-text text-muted">Your District</small> -->
                                        </div>
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Address</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" id="address" name="address" placeholder="Ex. kuratoli, kuril bisshowroad" class="form-control" required>
                                          <!-- <small class="form-text text-muted">Your Home Address</small> -->
                                        </div>
                                    </div>

                                    <div class="row form-group">

                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Institute</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" id="institute" name="institute" pattern="[A-Z a-z]{1,30}" placeholder="Ex. American Int. University" class="form-control" required>
                                          <!-- <small class="form-text text-muted">Your Email</small> -->
                                        </div>
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Subject</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" id="subject" name="subject" placeholder="Ex. CSE" pattern="[A-Z a-z]{1,20}" class="form-control" required>
                                          <!-- <small class="form-text text-muted">Your department</small> -->
                                        </div>
                                    </div>

                                    <div class="row form-group">

                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Passing Year</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" id="pyear" name="pyear" pattern="[0-9]{4}" placeholder="Ex. 2021" class="form-control" required>
                                          <!-- <small class="form-text text-muted">Graduated year</small> -->
                                        </div>
                                        <div class="col-12 col-md-2"></div>
                                          <div class="col-12 col-md-4">
                                            <button type="submit" class="btn btn-primary btn-sm active" name="add-cv" style="width:100%;">Submit</button>
                                          </div>
                                      </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Right Panel -->

