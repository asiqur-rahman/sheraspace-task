
<!doctype html>
<head>
    <meta charset="utf-8">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Left Panel -->

    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/"> <i class="menu-icon fa fa-bar-chart"></i>Dashboard </a>
                    </li>
                    <li>
                        <a href="/form"> <i class="menu-icon fa fa-wpforms"></i>Form </a>
                    </li>
                    <li>
                        <a href="/cvlist"> <i class="menu-icon fa fa-th"></i>CV List </a>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
    </aside><!-- /#left-panel -->

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

      <!-- Header-->
      <header id="header" class="header">
          <div class="top-left">
              <div class="navbar-header">
                  <a class="navbar-brand" href="./"><img src="/images/logo.png" alt="Logo"></a>
                  <a class="navbar-brand hidden" href="./"><img src="/images/logo2.png" alt="Logo"></a>
                  <a id="menuToggle" class="menutoggle"><i class="fa fa-bars"></i></a>
              </div>
          </div>
      </header>
      <!-- Header-->

        <div class="content">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <strong><%= data.name %></strong>'s  Curriculum Vitae
                            </div>
                            <div class="card-body card-block">
                                <form action="" method="post" class="form-horizontal">

                                    <div class="row form-group">
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Name</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" value="<%= data.name %>" class="form-control" disabled>

                                        </div>
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Father Name</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" value="<%= data.fname %>" class="form-control" disabled>

                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Date of Birth</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" value="<%= data.dob.getDate() %>/<%= data.dob.getMonth() %>/<%= data.dob.getFullYear() %>" class="form-control" disabled>

                                        </div>
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Gender</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                        <input type="text" value="<%= data.gender %>" class="form-control" disabled>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Phone</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" value="<%= data.phone %>" class="form-control" disabled>
                                        </div>
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Email</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" value="<%= data.email %>" class="form-control" disabled>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-2">
                                          <label for="select" class=" form-control-label">District</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                            <input type="text" value="<%= data.district %>" class="form-control" disabled>

                                        </div>
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Address</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" value="<%= data.address %>" class="form-control" disabled>
                                        </div>
                                    </div>

                                    <div class="row form-group">

                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Institute</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" value="<%= data.institute %>" class="form-control" disabled>
                                        </div>
                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Subject</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" value="<%= data.subject %>" class="form-control" disabled>
                                        </div>
                                    </div>

                                    <div class="row form-group">

                                        <div class="col col-md-2">
                                          <label for="text-input" class=" form-control-label">Passing Year</label>
                                        </div>
                                        <div class="col-12 col-md-4">
                                          <input type="text" value="<%= data.pyear %>" class="form-control" disabled>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Right Panel -->

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
<script src="/js/main.js"></script>
<script>
  function getDistricts()
  {
    http=new XMLHttpRequest();
    var sk=document.getElementById('divisions').value;
    alert(sk);
    http.onreadystatechange = function()
    {
      // alert(http.readyState);
      if(http.readyState==4 && http.status==200)
      {
        // alert(http.responseText);
        document.getElementById('districts').innerHTML=http.responseText;
      }
    }
    http.open("GET","getDistricts.php?sk="+sk,true);
    http.send();
  }
</script>

</body>
</html>
